{
  "name": "luxestart",
  "version": "1.0.0",
  "author": "Hieu hoc code",
  "description": "Angular Chrome Extension Template",
  "scripts": {
    "ng": "ng",
    "start": "npm run watch",
    "build:angular": "ng build --configuration development",
    "build:angular-production": "ng build --configuration production",
    "watch:angular": "ng build --watch --configuration development --delete-output-path false --source-map=true --plugin ~angular/sourcemaps-plugin.js",
    "build:tailwind": "tailwindcss -i ./angular/src/@luxstart/styles/tailwind.scss -o ./angular/dist/styles.css --minify",
    "watch:tailwind": "tailwindcss -i ./angular/src/@luxstart/styles/tailwind.scss -o ./angular/dist/styles.css --watch",
    "build:chrome": "(cd chrome && rollup -c)",
    "watch:chrome": "(cd chrome && rollup -c --watch)",
    "build": "npm run clean && npm run build:angular && npm run build:tailwind && npm run build:chrome",
    "build:production": "npm run build:angular-production && npm run build:tailwind && npm run build:chrome && npm run pack",
    "watch": "npm run clean && npm-run-all --parallel watch:*",
    "clean": "rimraf angular/dist",
    "pack": "cd angular/dist && bestzip ../../extension-build.zip *"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.7",
    "@angular/cdk": "^19.1.5",
    "@angular/common": "^19.1.7",
    "@angular/compiler": "^19.1.7",
    "@angular/core": "^19.1.7",
    "@angular/forms": "^19.1.7",
    "@angular/material": "^19.1.5",
    "@angular/platform-browser": "^19.1.7",
    "@angular/platform-browser-dynamic": "^19.1.7",
    "@angular/router": "^19.1.7",
    "d3": "^7.9.0",
    "idb": "^8.0.2",
    "lodash-es": "^4.17.21",
    "lucide-angular": "^0.462.0",
    "ng-circle-progress": "^1.7.1",
    "ngx-build-plus": "^18.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1901.8",
    "@angular/build": "^19.1.7",
    "@angular/cli": "~19.1.7",
    "@angular/compiler-cli": "^19.1.7",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chrome": "^0.0.268",
    "autoprefixer": "^10.4.20",
    "bestzip": "^2.2.1",
    "chroma-js": "2.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "rimraf": "^5.0.7",
    "tailwindcss": "3.4.1",
    "typescript": "5.7.3"
  }
}